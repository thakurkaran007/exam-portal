generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  signUp    Boolean  @default(false)
  testSlot  DateTime? 
  testApplied Boolean  @default(false)
  testGiven Boolean  @default(false)
  testSubmitted Boolean @default(false)
  marks     Int @default(0)
  createdAt DateTime @default(now())
  testId    String?
  test      Test?    @relation(fields: [testId], references: [id])
}

model Admin {
  id       String   @id @default(cuid())
  email    String   @unique
  otp      String?
}

model Mcq {
  id        String   @id @default(cuid())
  question  String
  option1   String
  option2   String
  option3   String
  option4   String
  answer    String
  marks     Int
  createdAt DateTime @default(now())
  testId    String?
  test      Test?    @relation(fields: [testId], references: [id])
}

model CodingQuestion {
  id                  String   @id @default(cuid())
  title               String
  description         String
  sampleTestCase      String
  sampleTestCaseOutput String
  testCases           String
  testCasesOutput     String
  marks               Int
  difficulty          String
  createdAt           DateTime @default(now())
  testId              String?
  test                Test?    @relation(fields: [testId], references: [id])
}

model Test {
  id               String           @id @default(cuid())
  name             String
  timeSlot         DateTime
  endTime          DateTime
  usersAllowed     Int 
  createdAt        DateTime @default(now())
  totalMarks       Int
  noOfMcqs         Int @default(0)
  noOfCodingQues   Int  @default(0)
  usersFilled     Int @default(0)
  usersEnrolled    User[] 
  mcqs             Mcq[]
  codingQuestions  CodingQuestion[]
}
